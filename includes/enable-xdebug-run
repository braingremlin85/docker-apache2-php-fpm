#!/usr/bin/with-contenv bash
# shellcheck shell=bash

if [ "$XDEBUG" == "true" ]; then
    cp /etc/php${PHP_VERSION}/conf.d/50_xdebug.off /etc/php${PHP_VERSION}/conf.d/50_xdebug.ini
    echo "XDEBUG enabled!"
else
    rm -f "/etc/php${PHP_VERSION}/conf.d/50_xdebug.ini"
    echo "XDEBUG disabled!"
fi
